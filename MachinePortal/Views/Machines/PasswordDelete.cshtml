@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model MachinePortal.Models.Password

<div style="width:40%" class="modal-dialog">
    <div style="width:150%" class="modal-content">
        <form asp-action="DeletePassword" asp-controller="Machines">
            <div style="background-color: #dc3545;" class="modal-header">
                <i style="color:white;font-size:30px;background-color:#dc3545;" class="bi-x-circle"></i>
                <h3 style="color:white;text-align:center;" class="modal-title">@Localizer["Remove Password"].Value</h3>
                <button style="color:white;margin-top:-8px;" type="button" class="close" data-dismiss="modal"><span aria-hidden="true" class="c-m-btn">×</span><span class="sr-only">@Localizer["Close"].Value</span></button>
            </div>
            <div style="max-width:900px" class="modal-body">
                <div style="padding:10px;" class="form-horizontal">
                    <label>@Localizer["Machine"].Value</label>
                    <input readonly value="@ViewBag.MachineName" class="form-control" />
                    <input style="display:none" asp-for="MachineID" value="@ViewBag.MachineID" class="form-control" />
                    <br />
                    <label asp-for="EquipmentName"></label>
                    <input readonly asp-for="EquipmentName" class="form-control" />
                    <br />
                    <label asp-for="EquipmentDescription"></label>
                    <input readonly asp-for="EquipmentDescription" class="form-control" />
                    <br />
                    <label>@Localizer["Department"].Value</label>
                    <input readonly asp-for="DepartmentName" value="@Model.DepartmentName" class="form-control" />
                    <br />
                    <label asp-for="Level"></label>
                    <input readonly asp-for="Level" class="form-control" />
                    <br />
                    <label asp-for="User"></label>
                    <input readonly asp-for="User" class="form-control" />
                    <br />
                    <label asp-for="Pass"></label>
                    <input readonly asp-for="Pass" class="form-control" />
                    <input style="display:none" asp-for="ID" />
                </div>
            </div>
            <div class="modal-footer">
                <input style="width:150px;" type="button" value="@Localizer["Cancel"].Value" class="btn btn-primary mr-auto" data-dismiss="modal" />
                <input style="width:150px;float:right;" type="submit" value="@Localizer["Delete"].Value" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>