@model IEnumerable<MachinePortal.Models.Machine>

@{
    ViewData["Title"] = "Machines";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" style="margin:10px; float:right" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-responsive">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.AssetNumber)</th>
            <th>@Html.DisplayNameFor(model => model.MES_Name)</th>
            <th>@Html.DisplayNameFor(model => model.SAP_Name)</th>
            <th>@Html.DisplayNameFor(model => model.WorkCenter)</th>
            <th>@Html.DisplayNameFor(model => model.CostCenter)</th>
            <th>@Html.DisplayNameFor(model => model.ServerPath)</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @if (item.ImagePath != null)
            {
                <td><img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.ImagePath)" width="100" height="100" /></td>
            }
            else
            {
                <td><img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="100" height="100" /></td>
            }
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.AssetNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.MES_Name)</td>
            <td>@Html.DisplayFor(modelItem => item.SAP_Name)</td>
            <td>@Html.DisplayFor(modelItem => item.WorkCenter)</td>
            <td>@Html.DisplayFor(modelItem => item.CostCenter)</td>
            <td>@Html.DisplayFor(modelItem => item.ServerPath)</td>
            <td>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">Open</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>