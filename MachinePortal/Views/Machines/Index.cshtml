@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<MachinePortal.Models.Machine>

@{
    string notMessage = (ViewData["notificationMessage"] != null) ? ViewData["notificationMessage"].ToString() : "";
    string notIcon = (ViewData["notificationIcon"] != null) ? ViewData["notificationIcon"].ToString() : "";
    string notType = (ViewData["notificationType"] != null) ? ViewData["notificationType"].ToString() : "";
}

<script>
    $(document).ready(function () {
        if ('@notMessage' != '') {
            notify('', '@notMessage', 'top', 'right', '@notIcon', '@notType', 'animated fadeInRight', 'animated fadeInRight');
        };
    });
</script>

<div class="card dribble-card c-vitesco-gray">
    <div class="card-header c-vitesco-gray">
        <i style="vertical-align:middle" class="ti-desktop c-vitesco-gray"></i>
        <div class="d-inline-block">
            <h2 style="color:white;">@Localizer["Machines"].Value</h2>
        </div>
    </div>
    <div class="card-block card-padding">
        <p>
            <a class="btn btn-primary btn-create" asp-action="Create">@Localizer["Create New Machine"].Value</a>
        </p>
        <table style="table-layout:auto; padding-top:20px" class="table table-bordered table-vitesco">
            <thead class="thead-vitesco">
                <tr>
                    <th width="10%">@Html.DisplayNameFor(model => model.ImagePath)</th>
                    <th width="30%">@Html.DisplayNameFor(model => model.Name)</th>
                    <th width="40%">@Html.DisplayNameFor(model => model.Description)</th>
                    <th width="20%">@Localizer["Options"].Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (item.ImagePath != null)
                        {
                            <td><img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.ImagePath)" width="100" /></td>
                        }
                        else
                        {
                            <td><img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="100" /></td>
                        }
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">@Localizer["Open"].Value</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">@Localizer["Edit"].Value</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">@Localizer["Delete"].Value</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>