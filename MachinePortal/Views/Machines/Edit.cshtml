@model MachinePortal.Models.Machine

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Machines</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" asp-controller="Machines">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input type="hidden" asp-for="ImagePath" class="form-control" />
                <input type="file" name="image" />
            </div>
            <div class="form-group">
                <a class="btn btn-default" asp-action="Index">Back to List</a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}