<script type="text/javascript">
    $(document).ready(function () {
        $("#documentFilePath").on("focusout", function () {
            var type = $("#documentLocation option:selected").text();
            var value = document.getElementById('documentFilePath').value;
            if (type == 'Network File') {
                if (value.substring(0, 2) != '\\\\' || !value.includes('.')) {
                    $("#valDocument").html('Path must start with \\\\ and contains an extension (.pdf)');
                }
            }
            else if (type == 'Web Link') {
                if (!(value.substring(0, 7) == 'http://' || value.substring(0, 8) == 'https://' || value.substring(0, 4) == 'www.')) {
                    $("#valDocument").html('Web link must start with http://// or https:///// or www');
                }
            }
        });

        $("#imageFilePath").on("focusout", function () {
            var type = $("#imageLocation option:selected").text();
            var value = document.getElementById('imageFilePath').value;
            if (type == 'Network File') {
                if (value.substring(0, 2) != '\\\\' || !value.includes('.')) {
                    $("#valImage").html('Path must start with \\\\ and contains an extension (.pdf)');
                }
            }
            else if (type == 'Web Link') {
                if (!(value.substring(0, 7) == 'http://' || value.substring(0, 8) == 'https://' || value.substring(0, 4) == 'www.')) {
                    $("#valImage").html('Web link must start with http://// or https:///// or www');
                }
            }
        });

        $("#documentFilePath").on("focusin", function () {
            $("#valDocument").html('');
        });

        $("#imageFilePath").on("focusin", function () {
            $("#valImage").html('');
        });
    });
</script>

