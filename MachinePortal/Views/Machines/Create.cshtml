            $.getJSON(url, { AreaID: $("#AreaID :selected").val() }, function (data) {
                var items = '';
                $('#SectorID').html(items);
                $.each(data, function (i, sector) {
                    items += "<option value='" + sector.value + "'>" + sector.text + "</option>";
                });
                $('#SectorID').append("<option value='-1'>Select</option>");
                $('#SectorID').append(items);
                $('#LineID').html("");
