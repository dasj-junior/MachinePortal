@* Selection Filters *@
<script>
    function filter(search, select) {
        var keyword = document.getElementById(search).value;
        var select = document.getElementById(select);
        for (var i = 0; i < select.length; i++) {
            var txt = select.options[i].text;
            if (!txt.match(keyword)) {
                $(select.options[i]).attr('disabled', 'disabled').hide();
            } else {
                $(select.options[i]).removeAttr('disabled').show();
            }

        }
    }

    $(document).ready(function () {
        $("#FilterSelectResponsible").on("keyup", function () {
            filter("FilterSelectResponsible", "ResponsiblesSelect");
        });
        $("#FilterSelectedResponsible").on("keyup", function () {
            filter("FilterSelectedResponsible", "ResponsiblesSelected");
        });
        $("#FilterSelectDevice").on("keyup", function () {
            filter("FilterSelectDevice", "DeviceSelect");
        });
        $("#FilterSelectedDevice").on("keyup", function () {
            filter("FilterSelectedDevice", "DeviceSelected");
        });
    });
</script>

