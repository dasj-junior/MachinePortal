@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<MachinePortal.Models.Sector>

<div class="row justify-content-around">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <a asp-action="Lines" asp-route-id="@item.ID">
                <div class="card fb-card c-vitesco-blue-03">
                    <div style="text-align:center" class="card-header c-vitesco-blue-03">
                        <div class="d-inline-block">
                            <h3 style="color:white">@Html.DisplayFor(modelItem => item.Name)</h3>
                        </div>
                    </div>
                    <div style="text-align:center" class="card-block card-padding">
                        @if (item.ImagePath != null)
                        {
                            <img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.ImagePath)" width="250" />
                        }
                        else
                        {
                            <img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="250" />
                        }
                    </div>
                </div>
            </a>
        </div>
    }
</div>
