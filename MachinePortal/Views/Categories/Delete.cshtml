@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model MachinePortal.Models.Category

@* Send form through AJAX *@
<script type="text/javascript">
    $(document).ready(function () {
        $("form").submit(function (event) {
            event.preventDefault()
            var ID = document.getElementById('ID').value;
            $.ajax({
                url: '@Url.Content("~/")' + "Categories/Delete",
                type: "POST",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: { ID : ID },
                success: function (m) {
                    if (m == 'success') { window.location.href = "/Categories/Index"; };
                },
                error: function (e) {
                    alert(e.responseText);
                }
            });
        });
    });
</script>

<div class="modal-dialog">
    <div class="modal-content">
        <form id="form" asp-controller="Categories" asp-action="Delete" class="form" method="post">
            <div style="background-color: #dc3545;" class="modal-header">
                <i style="color:white;font-size:30px;background-color:#dc3545;" class="bi-x-circle"></i>
                <h3 style="color:white;text-align:center;" class="modal-title">@Localizer["Remove Category"].Value</h3>
                <button style="color:white;margin-top:-8px;" type="button" class="close" data-dismiss="modal"><span aria-hidden="true" class="c-m-btn">×</span><span class="sr-only">@Localizer["Close"].Value</span></button>
            </div>
            <div class="modal-body text-center">
                <div>
                    <dl class="dl-horizontal">
                        <dd>
                            <h4>@Html.DisplayFor(model => model.Name)</h4>
                        </dd>
                    </dl>
                </div>
                <input style="display:none" asp-for="ID" />
            </div>
            <div class="modal-footer">
                <input type="hidden" asp-for="ID" />
                <input style="width:150px;" type="button" value="@Localizer["Cancel"].Value" class="btn btn-primary mr-auto" data-dismiss="modal" />
                <input style="width:150px;float:right;" type="submit" value="@Localizer["Delete"].Value" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>