                    {
                        <td><img src="@Html.DisplayFor(model => model.ImagePath)" width="200" /></td>
                    }
                    else
                    {
                        <td><img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="200" /></td>
                    }
                    <img src="@Html.DisplayFor(model => model.ImagePath)" width="200" height="200" />
                </dd>
                <br />
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
