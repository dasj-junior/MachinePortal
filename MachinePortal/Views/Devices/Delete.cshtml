@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model MachinePortal.Models.Device

<div class="row">
    <div class="col-6">
        <div class="card fb-card">
            <div style="background-color:#d9534f;" class="card-header">
                <i style="background-color:#d9534f;vertical-align:middle" class="ti-close"></i>
                <div class="d-inline-block">
                    <h2 style="color:white">Delete</h2>
                </div>
            </div>
            <div style="padding-left:50px" class="card-block card-padding text-center">
                <h4>@Html.DisplayFor(model => model.Name)</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dd>
                        @if (Model.ImagePath != null)
                        {
                            <td><img src="@Html.DisplayFor(model => model.ImagePath)" width="200" /></td>
                        }
                        else
                        {
                            <td><img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="200" /></td>
                        }
                    </dd>
                    <br />
                    <dt>
                        @Html.DisplayNameFor(model => model.Brand)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Brand)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Model)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Model)
                    </dd>
                </dl>
                <hr />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <a style="float:left; width:120px;" class="btn btn-primary" asp-action="Index">Back to List</a>
                    <input style="float:right; width:120px;" type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
