@model IEnumerable<MachinePortal.Models.Asset>

@{
    ViewData["Title"] = "Assets";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-responsive">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ImageURL)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Number)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.InitialValue)</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td><img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.ImageURL)" width="100" height="100"/></td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Number)</td>
            <td>@Html.DisplayFor(modelItem => item.Description)</td>
            <td>@Html.DisplayFor(modelItem => item.InitialValue)</td>
            <td>
                <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.ID">Details</a>
                <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
