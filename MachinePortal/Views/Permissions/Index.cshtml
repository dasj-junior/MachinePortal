@model IEnumerable<MachinePortal.Models.Permission>

@{
    ViewData["Title"] = "Permissions";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-responsive">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.PermissionName)</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.PermissionName)</td>
            <td>
                <a class="btn-group" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn-group" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
