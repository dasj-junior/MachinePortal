@* Machine Search By Input ID *@
<script>
    $(document).ready(function () {
        $("#SearchByID").on("click", function () {
            var id = $('#InputID').val();
            $.ajax({
                type: "POST",
                url: '@Url.Content("~/")' + "Home/ValidateMachineID",
                data: {"MachineID" : id },
                success: function (e) {
                    if (e == true) {
                        window.location.href = "Machines/Details/" + id;
                    }
                    else {
                        notify(' Error: ', 'Machine Not Found', 'top', 'right', 'ti-info', 'inverse', 'animated fadeInRight', 'animated fadeInRight')
                    }
                },
                async: true
            });
        });
    });
</script>

@* Machine Search By Hierarchies *@
<script>
    $(document).ready(function () {
        $("#SearchByHierarchies").on("click", function () {
            window.location.href = "Hierarchies/Index";
        });
    });
</script>
@* Machine Search By QR *@
<script>
    $(document).ready(function () {
        $("#SearchByQR").on("click", function () {
            decoder.play();
        });

        $('#modalQR').on('hidden.bs.modal', function () {
            decoder.stop();
        })

    });
</script>

@* QR Code Decoder *@
<script type="text/javascript">
    var arg = {
        resultFunction: function (result) {
            $.ajax({
                type: "POST",
                url: '@Url.Content("~/")' + "Home/ValidateMachineID",
                data: { "MachineID": result.code },
                success: function (e) {
                    if (e == true) {
                        window.location.href = "Machines/Details/" + result.code;
                    }
                    else {
                        alert("Machine Not Found");
                    }
                },
                async: true
            });
        }
    };
    document.querySelector('select').addEventListener('change', function () {
        decoder.stop().play();
    });
</script>

