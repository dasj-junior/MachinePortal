@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="card dribble-card c-vitesco-blue-03">
    <div class="card-header c-vitesco-blue-03">
        <i style="vertical-align:middle" class="ti-mobile c-vitesco-blue-03"></i>
        <div class="d-inline-block">
            <h2 style="color:white;">@Localizer["Contact"].Value</h2>
            <h3 style="color:white;">@ViewData["Message"]</h3>
        </div>
    </div>
    <div class="card-block card-padding">
        <address>
            @Localizer["One Microsoft Way"].Value<<br />
            Redmond, WA 98052-6399<br />
            <abbr title="Phone">P:</abbr>
            425.555.0100
        </address>

        <address>
            <strong>@Localizer["Support:"].Value</strong> <a href="mailto:Support@example.com">Support@example.com</a><br />
            <strong>@Localizer["Marketing:"].Value</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
        </address>
    </div>
</div>
