@model MachinePortal.Models.Line

@{
    ViewData["Title"] = "Details";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Line: @Html.DisplayFor(model => model.Name)</h4>
        </div>
        <div class="modal-body">
            <div>
                <dl class="dl-horizontal">
                    <dd>
                        @if (Model.ImagePath != null)
                        {
                            <td><img class="img-thumbnail" src="@Html.DisplayFor(model => model.ImagePath)" height="200" /></td>
                        }
                        else
                        {
                            <td><img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="200" /></td>
                        }
                    </dd>
                    <br />
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        Sector
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Sector.Area.Name)
                    </dd>
                    <dt>
                        Area
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Sector.Name)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" />
                </div>
            </div>
        </div>
    </div>
</div>