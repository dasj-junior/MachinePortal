@model MachinePortal.Models.ViewModels.LineFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Line</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" asp-controller="Lines">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Line.Name" class="control-label"></label>
                <input asp-for="Line.Name" class="form-control" />
                <span asp-validation-for="Line.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Line.SectorID" class="control-label"></label>
                <select asp-for="Line.SectorID" asp-items="@(new SelectList(Model.Sectors,"ID","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Line.ImagePath" class="control-label"></label>
                <input type="file" name="image" accept="image/*" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
