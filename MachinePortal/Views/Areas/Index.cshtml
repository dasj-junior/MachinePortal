@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<MachinePortal.Models.Area>

<script>
    function renderPartialEdit(ID) {
        $.ajax({
            url: '@Url.Action("AddPartialEdit", "Areas")',
            data: { id: ID},
            type: "POST",
            success: function(data) {
                $('#modalEdit').html(data);
            }
        });
    }

    function renderPartialDelete(ID) {
        $.ajax({
            url: '@Url.Action("AddPartialDelete", "Areas")',
            data: { id: ID},
            type: "POST",
            success: function(data) {
                $('#modalDelete').html(data);
            }
        });
    }
</script>

<div class="card fb-card c-vitesco-green-05">
    <div class="card-header c-vitesco-green-05">
        <i style="vertical-align:middle" class="ti-layout-list-thumb c-vitesco-green-05"></i>
        <div class="d-inline-block">
            <h2 style="color:white;">@Localizer["Hierarchies"].Value</h2>
        </div>
        <hr style="border:1px solid white" />
        <div class="d-inline-block">
            <h2 style="color:white">@Localizer["Areas"].Value</h2>
        </div>
    </div>
    <div class="card-block card-padding">
        <div>
            <p>
                <button class="btn btn-primary btn-create" data-toggle="modal" data-target="#modalCreate">@Localizer["Create New Area"].Value</button>
            </p>
            <div class="table-responsive">
                <table style="table-layout:auto;" class="table table-hover table-bordered table-vitesco">
                    <thead class="thead-vitesco">
                        <tr>
                            <th width="15%">@Html.DisplayNameFor(model => model.ImagePath)</th>
                            <th width="65%">@Html.DisplayNameFor(model => model.Name)</th>
                            <th width="20%" class="text-center">@Localizer["Options"].Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.ImagePath != null)
                                {
                                    <td class="text-center"><img src="@Html.DisplayFor(modelItem => item.ImagePath)" width="100" /></td>
                                }
                                else
                                {
                                    <td class="text-center"><img src="~/resources/General/NoImage.jpg" width="100" /></td>
                                }
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="text-center ws-nowrap">
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">@Localizer["Open"].Value</a>
                                    <button class="btn btn-primary" data-toggle="modal" onclick="renderPartialEdit(@item.ID)" data-target="#modalEdit">@Localizer["Edit"].Value</button>
                                    <button class="btn btn-danger" data-toggle="modal" onclick="renderPartialDelete(@item.ID)" data-target="#modalDelete">@Localizer["Delete"].Value</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalCreate" role="dialog">
    @Html.Partial("Create", new Area());
</div>
<div class="modal" id="modalEdit" role="dialog">
</div>
<div class="modal" id="modalDelete" role="dialog">
</div>