@model IEnumerable<MachinePortal.Models.Area>

@{
    ViewData["Title"] = "Hierarchies";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script>
    function renderPartialEdit(ID) {
        $.ajax({
            url: '@Url.Action("AddPartialEdit", "Areas")',
            data: { id: ID},
            type: "POST",
            success: function(data) {
                $('#modalEdit').html(data);
            }
        });
    }

    function renderPartialDelete(ID) {
        $.ajax({
            url: '@Url.Action("AddPartialDelete", "Areas")',
            data: { id: ID},
            type: "POST",
            success: function(data) {
                $('#modalDelete').html(data);
            }
        });
    }
</script>


<div class="card fb-card bg-c-blue">
    <div style="background-color:#008269;" class="card-header">
        <i style="background-color:#008269;vertical-align:middle" class="ti-layout-list-thumb"></i>
        <div class="d-inline-block">
            <h2 style="color:white;">@ViewData["Title"] - Areas</h2>
        </div>
    </div>
    <div class="card-block card-padding">
        <div>
            <p>
                <button class="btn btn-primary btn-create" data-toggle="modal" data-target="#modalCreate">Create New Area</button>
            </p>
            <table style="table-layout:auto;" class="table table-bordered table-vitesco">
                <thead class="thead-vitesco">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @if (item.ImagePath != null)
                            {
                                <td><img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.ImagePath)" width="100" height="100" /></td>
                            }
                            else
                            {
                                <td><img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="100" height="100" /></td>
                            }
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">Open</a>
                                <button class="btn btn-primary" data-toggle="modal" onclick="renderPartialEdit(@item.ID)" data-target="#modalEdit">Edit</button>
                                <button class="btn btn-danger" data-toggle="modal" onclick="renderPartialDelete(@item.ID)" data-target="#modalDelete">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="modal fade" id="modalCreate" role="dialog">
            @Html.Partial("Create", new Area());
        </div>
        <div class="modal fade" id="modalEdit" role="dialog">
        </div>
        <div class="modal fade" id="modalDelete" role="dialog">
        </div>
    </div>
</div>