@model MachinePortal.Models.Sector

@{
    ViewData["Title"] = "Delete";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h3 class="modal-title">Sector: @Html.DisplayFor(model => model.Name)</h3>
        </div>
        <div class="modal-body">
            <div>
                <dl class="dl-horizontal">
                    <dd>
                        @if (Model.ImagePath != null)
                        {
                            <td><img class="img-thumbnail" src="@Html.DisplayFor(model => model.ImagePath)" height="200" /></td>
                        }
                        else
                        {
                            <td><img class="img-thumbnail" src="~/resources/General/NoImage.jpg" width="200" /></td>
                        }
                    </dd>
                </dl>
            </div>
        </div>
        <div class="modal-footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>