@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<MachinePortal.Models.Sector>

@* Check User Permissions *@
@using Microsoft.AspNetCore.Identity
@using MachinePortal.Areas.Identity.Data
@using Microsoft.EntityFrameworkCore
@inject UserManager<MachinePortalUser> UserManager
@inject IdentityContext identityContext
@{
    var user = await UserManager.GetUserAsync(User);
    List<string> permissions = new List<string>();
    if (user != null) { permissions = ((from obj in identityContext.UserPermission select obj).Include(p => p.Permission).Where(x => x.UserID == user.Id).ToList()).Select(p => p.Permission.PermissionName).ToList(); };
    if (!permissions.Contains("PageHierarchies")) { Context.Response.Redirect("/Home/AccessDenied"); };
}

<script>
    function renderPartialEdit(ID) {
        $.ajax({
            url: '@Url.Action("AddPartialEdit", "Sectors")',
            data: { id: ID},
            type: "POST",
            success: function(data) {
                $('#modalEdit').html(data);
            }
        });
    }

    function renderPartialDelete(ID) {
        $.ajax({
            url: '@Url.Action("AddPartialDelete", "Sectors")',
            data: { id: ID},
            type: "POST",
            success: function(data) {
                $('#modalDelete').html(data);
            }
        });
    }

    function renderPartialDetails(ID) {
        $.ajax({
            url: '@Url.Action("AddPartialDetails", "Sectors")',
            data: { id: ID},
            type: "POST",
            success: function(data) {
                $('#modalDetails').html(data);
            }
        });
    }
</script>

<div class="card fb-card c-vitesco-green-05">
    <div class="card-header c-vitesco-green-05">
        <i style="vertical-align:middle" class="ti-layout-list-thumb c-vitesco-green-05"></i>
        <div class="d-inline-block">
            <h2 style="color:white;">@Localizer["Hierarchies"].Value</h2>
        </div>
        <hr style="border:1px solid white" />
        <div class="d-inline-block">
            <h2 style="color:white">@Localizer["Sectors"].Value</h2>
        </div>
    </div>
    <div class="card-block card-padding">
        <div>
            <div class="table-responsive">
                <table style="table-layout:auto;" class="table table-hover table-bordered table-vitesco">
                    <thead class="thead-vitesco">
                        <tr>
                            <th width="15%">@Html.DisplayNameFor(model => model.ImagePath)</th>
                            <th width="65%">@Html.DisplayNameFor(model => model.Name)</th>
                            <th width="20%" class="text-center">@Localizer["Options"].Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if (item.ImagePath != null)
                                {
                                    <td class="text-center"><img src="@Html.DisplayFor(modelItem => item.ImagePath)" width="100" /></td>
                                }
                                else
                                {
                                    <td class="text-center"><img src="~/resources/General/NoImage.jpg" width="100" /></td>
                                }
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="text-center ws-nowrap">
                                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ID">@Localizer["Open"].Value</a>
                                    @if (permissions.Contains("HierarchiesEdit"))
                                    {
                                        <button class="btn btn-primary" data-toggle="modal" onclick="renderPartialEdit(@item.ID)" data-target="#modalEdit">@Localizer["Edit"].Value</button>
                                    }
                                    @if (permissions.Contains("HierarchiesDelete"))
                                    {
                                        <button class="btn btn-danger" data-toggle="modal" onclick="renderPartialDelete(@item.ID)" data-target="#modalDelete">@Localizer["Delete"].Value</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <br />
        <a style="width:150px;" class="btn btn-primary" asp-controller="Areas" asp-action="Index">@Localizer["Back"].Value</a>
    </div>
</div>

<div class="modal" id="modalDetails" role="dialog">
</div>
<div class="modal" id="modalEdit" role="dialog">
</div>
<div class="modal" id="modalDelete" role="dialog">
</div>