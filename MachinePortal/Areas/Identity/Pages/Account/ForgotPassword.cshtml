@page
@model ForgotPasswordModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
        <div class="card fb-card c-vitesco-green-04">
            <div class="card-header c-vitesco-green-04">
                <i style="vertical-align:middle; display:inline-block; margin-top:-5px;" class="bi-door-closed c-vitesco-green-04"></i>
                <div class="d-inline-block">
                    <h2 style="color:white">@Localizer["Forgot your password?"].Value</h2>
                </div>
            </div>
            <div class="card-block card-padding">
                <h4>@Localizer["Enter your email."].Value</h4>
                <hr />
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />
                    <button type="submit" class="bt-vt-r btn btn-success">@Localizer["Submit"].Value</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
