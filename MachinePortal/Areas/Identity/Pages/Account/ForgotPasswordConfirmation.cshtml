@page
@model ForgotPasswordConfirmation
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="row justify-content-center">
    <div class="col-6">
        <div class="card fb-card c-vitesco-green-04">
            <div class="card-header c-vitesco-green-04">
                <i style="vertical-align:middle; display:inline-block; margin-top:-5px;" class="bi-door-closed c-vitesco-green-04"></i>
                <div class="d-inline-block">
                    <h2 style="color:white">Forgot password confirmation</h2>
                </div>
            </div>
            <div class="card-block card-padding">
                <br />
                <h4>Please check your email to reset your password.</h4>
                <br />
            </div>
        </div>
    </div>
</div>
