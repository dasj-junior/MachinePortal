@page
@model ErrorModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@Localizer["Request ID:"].Value</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Development Mode</h3>
<p>
    @Localizer["Swapping to"].Value <strong>@Localizer["Development"].Value</strong> @Localizer["environment will display more detailed information about the error that occurred."].Value
</p>
<p>
    <strong>@Localizer["Development environment should not be enabled in deployed applications"].Value</strong>@Localizer[", as it can result in sensitive information from exceptions being displayed to end users. For local debugging, development environment can be enabled by setting the"].Value <strong>ASPNETCORE_ENVIRONMENT</strong> @Localizer["environment variable to"].Value <strong>@Localizer["Development"].Value</strong>, @Localizer["and restarting the application."].Value
</p>
